/* 接物品游戏样式 */

/* 容器 */
.container {
  height: 100vh;
  overflow-y: auto;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 头部信息栏 */
.header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(45deg, #FFD700, #FFA500);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 统计信息 */
.stats {
  display: flex;
  gap: 15rpx;
}

.stat-box {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 游戏区域 */
.game-board {
  border-radius: 30rpx;
  padding: 20rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.3);
  position: relative;
  flex: 1;
}

/* Canvas 画布 */
.game-canvas {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 加载提示 */
.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 28rpx;
}

/* 覆盖层 */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  z-index: 10;
}

.overlay-content {
  text-align: center;
  color: white;
}

.overlay-title {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.overlay.game-over .overlay-title {
  color: #ff6b6b;
}

.overlay.paused .overlay-title {
  color: white;
}

.overlay-info {
  font-size: 36rpx;
  margin-bottom: 15rpx;
  color: white;
}

/* 重新开始按钮 */
.btn-restart {
  margin-top: 40rpx;
  padding: 25rpx 60rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.3);
}

.btn-restart::after {
  border: none;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.btn::after {
  border: none;
}

.btn-move {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 操作提示 */
.tips {
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 20rpx;
  font-size: 24rpx;
  padding-bottom: 30rpx;
}
