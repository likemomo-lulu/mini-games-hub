<!-- 2048 游戏页 -->
<view class="container" style="background: {{theme.pageBg}};">
  <view class="header">
    <view class="header-right">
      <view class="step-box" style="background: {{theme.headerCardBg}};">
        <text class="score-label" style="color: {{theme.headerTextLight}};">步数</text>
        <text class="score-value" style="color: {{theme.headerTextWhite}};">{{steps}}</text>
      </view>
      <view class="score-box" style="background: {{theme.headerCardBg}};">
        <text class="score-label" style="color: {{theme.headerTextLight}};">分数</text>
        <text class="score-value" style="color: {{theme.headerTextWhite}};">{{score}}</text>
      </view>
    </view>
  </view>

  <view class="controls">
    <button
      class="btn btn-restart"
      bindtap="restart"
      style="background: linear-gradient(135deg, {{theme.accentFrom}} 0%, {{theme.accentTo}} 100%);"
    >重新开始</button>
  </view>

  <view class="game-board">
    <canvas
      type="2d"
      id="gameCanvas"
      class="game-canvas"
      style="width: 552rpx; height: 552rpx;"
      bindtouchstart="onTouchStart"
      catchtouchmove="onTouchMove"
      bindtouchend="onTouchEnd"
    ></canvas>

    <view class="game-over {{gameOver ? 'show' : ''}}">
      <text class="game-over-title" style="color: {{theme.danger}};">游戏结束</text>
      <text class="game-over-score">得分: {{score}}</text>
      <button class="btn btn-restart" bindtap="restart">再来一局</button>
    </view>
  </view>

  <view class="tips" style="color: {{theme.tipsText}};">
    💡 滑动移动方块
  </view>
</view>
