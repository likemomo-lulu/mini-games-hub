/* 打地鼠游戏样式 */

/* 容器 */
.container {
  height: 100vh;
  overflow: hidden;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部信息栏 */
.header {
  width: 100%;
  margin-bottom: 40rpx;
}

.stats {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.stat-box {
  text-align: center;
  padding: 15rpx 25rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 控制按钮 */
.controls {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  padding: 25rpx;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn::after {
  border: none;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn[disabled] {
  opacity: 0.5;
}

/* 游戏区域 */
.game-board {
  position: relative;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.3);
  width: 100%;

}

/* 3x3 地洞网格 */
.hole-grid {
  width: 600rpx;
  height: 600rpx;
  position: relative;
  border-radius: 30rpx;
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 20rpx;
  background: rgb(185, 187, 18);
  aspect-ratio: 1;
}

/* 地洞 - 使用图片 */
.hole {
  position: relative;
  width: 100%;
  padding-top: 100%;
  overflow: hidden;
}

.hole-image {
  position: absolute;
  bottom: -20rpx;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 地鼠 */
.mole {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: top 0.2s ease;
}

.mole.up {
  top: 10%;
}

.mole.down {
  top: 100%;
}

.mole-icon {
  font-size: 100rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 金色地鼠 */
.hole.luck .mole-icon {
  filter: drop-shadow(0 0 20rpx #FFD700) drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 炸弹 */
.hole.pig .mole-icon {
  animation: shake 0.5s ease infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

/* 打击特效 */
.hit-effect {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  opacity: 0;
  transition: all 0.3s ease;
}

.hit-effect.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

.hit-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8);
}

/* 覆盖层 */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 10;
}

.overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.overlay-content {
  text-align: center;
  color: white;
}

.overlay-title {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.overlay-text {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

.overlay-info {
  font-size: 28rpx;
  margin-bottom: 15rpx;
  color: rgba(255, 255, 255, 0.9);
}

.btn-restart {
  margin-top: 40rpx;
  padding: 25rpx 60rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.3);
}

.btn-restart::after {
  border: none;
}

/* 操作提示 */
.tips {
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 30rpx;
  font-size: 24rpx;
}
