/* 扫雷游戏样式 */

/* 容器 */
.container {
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 20rpx;
}

/* 头部信息栏 */
.header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #f6e313;
}

/* 统计信息 */
.stats {
  display: flex;
  gap: 15rpx;
}

.stat-box {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.btn::after {
  border: none;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 游戏棋盘 */
.game-board {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 30rpx;
  padding: 20rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.3);
  position: relative;
}

/* 9x9 网格 */
.grid {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 6rpx;
  aspect-ratio: 1;
}

/* 格子 */
.cell {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
}

.cell-content {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 未揭开的格子 */
.cell.covered .cell-content {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

/* 已揭开的格子 */
.cell.revealed .cell-content {
  background: rgba(255, 255, 255, 0.3);
}

/* 插旗的格子 */
.cell.flagged .cell-content {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.flag {
  font-size: 32rpx;
}

/* 踩雷的格子 */
.cell.mine .cell-content {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  animation: shake 0.5s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

/* 数字颜色 */
.cell-1 { color: #0000ff; }
.cell-2 { color: #008000; }
.cell-3 { color: #ff0000; }
.cell-4 { color: #000080; }
.cell-5 { color: #800000; }
.cell-6 { color: #008080; }
.cell-7 { color: #000000; }
.cell-8 { color: #808080; }

/* 覆盖层 */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.5s ease;
  z-index: 10;
}

.overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.overlay-content {
  text-align: center;
  color: white;
}

.overlay-title {
  font-size: 70rpx;
  margin-bottom: 30rpx;
}

.overlay.game-over .overlay-title {
  color: #ff6b6b;
}

.overlay.game-win .overlay-title {
  background: linear-gradient(45deg, #FFD700, #FFA500);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.overlay-text {
  font-size: 36rpx;
  margin-bottom: 30rpx;
}

.overlay-info {
  font-size: 32rpx;
  margin-bottom: 15rpx;
  color: white;
}

/* 重新开始按钮 */
.btn-restart {
  margin-top: 40rpx;
  padding: 25rpx 60rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.3);
}

.btn-restart::after {
  border: none;
}

/* 操作提示 */
.tips {
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 30rpx;
  font-size: 24rpx;
  line-height: 1.6;
}
