/* 俄罗斯方块样式 */
.container {
  padding: 40rpx;
  height: 100vh;
  max-height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* 头部：不参与收缩 */
.header {
  width: 100%;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  color: #667eea;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.stat-box {
  text-align: center;
  padding: 15rpx 25rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 游戏区域 */
.game-area {
  background:  rgba(255, 255, 255, 0.15);;
  border-radius: 24rpx;
  padding: 12rpx;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.3);
  width: 100%;
  max-width: 600rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 画布区域（包含画布和右侧面板） */
.canvas-area {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 12rpx;
}

.canvas-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
}

.game-canvas {
  border: 6rpx solid #FFD93D;
  border-radius: 20rpx;
  background: #2d3436;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  flex-shrink: 0;
}

.pause-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 40rpx 80rpx;
  border-radius: 30rpx;
  font-size: 48rpx;
  font-weight: bold;
}

/* 右侧面板 */
.right-panel {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 80rpx;
  flex-shrink: 0;
}

.next-wrapper {
  display: flex;
  justify-content: center;
  border-radius: 12rpx;
  background: #2d3436;
  border: 3rpx solid #FFD93D;
}

.next-canvas {
  width: 80rpx;
  height: 80rpx;
}

/* 控制按钮：不参与收缩 */
.controls {
  display: flex;
  align-items: center;
  justify-content: space-around;
  gap: 14rpx;
  padding: 20rpx;
  width: 100%;
  max-width: 580rpx;
  flex-shrink: 0;
}

.btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  padding: 0;
  border-radius: 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  flex: 1;
}

.btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.4);
}

.btn-pause {
  background: linear-gradient(135deg, #FFD93D, #f4c802);
  color: #FFF;
  font-weight: bold;
  font-size: 32rpx;
  height: 80rpx;
  width: 80rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

.btn-rotate{
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.btn-full {
  width: 100%;
  font-size: 22rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFD93D, #f4c802);
}

.btn-down-wrapper {
  width: 100%;
  max-width: 580rpx;
  margin-bottom: 12rpx;
  flex-shrink: 0;
}

/* 游戏结束 */
.game-over {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.game-over-content {
  background: white;
  padding: 60rpx;
  border-radius: 40rpx;
  text-align: center;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.game-over-title {
  display: block;
  font-size: 56rpx;
  color: #667eea;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.game-over-score {
  display: block;
  font-size: 36rpx;
  margin-bottom: 40rpx;
  color: #636e72;
}

.restart-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  padding: 30rpx 80rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}
